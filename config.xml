<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bedroomsandmore.portal" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>B&amp;M Portal</name>
    <description>
        Bedrooms and More employee portal
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <icon src="www/res/icon/android/icon-drawable-ldpi.png" qualifier="ldpi" />
        <icon src="www/res/icon/android/icon-drawable-mdpi.png" qualifier="mdpi" />
        <icon src="www/res/icon/android/icon-drawable-hdpi.png" qualifier="hdpi" />
        <icon src="www/res/icon/android/icon-drawable-xhdpi.png" qualifier="xhdpi" />
        <icon src="www/res/icon/android/icon-drawable-xxhdpi.png" qualifier="xxhdpi" />
        <splash src="www/res/screen/android/splashscreen-drawable-ldpi.png" platform="android" qualifier="ldpi" />
        <splash src="www/res/screen/android/splashscreen-drawable-mdpi.png" platform="android" qualifier="mdpi" />
        <splash src="www/res/screen/android/splashscreen-drawable-hdpi.png" platform="android" qualifier="hdpi" />
        <splash src="www/res/screen/android/splashscreen-drawable-xhdpi.png" platform="android" qualifier="xhdpi" />
        <splash src="www/res/screen/android/splashscreen-drawable-xxhdpi.png" platform="android" qualifier="xxhdpi" />
        <splash src="www/res/screen/android/splashscreen-drawable-xxxhdpi.png" platform="android" qualifier="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="8000" />
    <engine name="android" spec="~6.1.2" />
    <engine name="ios" spec="~4.5.0-nightly.2017.5.30.a9532aed" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-device" spec="~1.1.5" />
    <plugin name="cordova-plugin-nativestorage" spec="~2.2.2" />
    <plugin name="cordova-plugin-media" spec="~3.0.0" />
    <plugin name="cordova-plugin-media-capture" spec="~1.4.2" />
    <plugin name="cordova-plugin-cszbar" spec="https://github.com/tjwoon/csZBar.git" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
    <plugin name="cordova-plugin-x-toast" spec="~2.6.0" />
</widget>
