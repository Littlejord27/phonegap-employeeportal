<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bedroomsandmore.portal" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>B&amp;M Portal</name>
    <description>
        Bedrooms and More employee portal
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="fullscreen" value="false" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />
        <allow-intent href="market:*" />
        <resource-file src="google-services.json" target="google-services.json" />
        <icon qualifier="ldpi" src="www/res/icon/android/icon-drawable-ldpi.png" />
        <icon qualifier="mdpi" src="www/res/icon/android/icon-drawable-mdpi.png" />
        <icon qualifier="hdpi" src="www/res/icon/android/icon-drawable-hdpi.png" />
        <icon qualifier="xhdpi" src="www/res/icon/android/icon-drawable-xhdpi.png" />
        <icon qualifier="xxhdpi" src="www/res/icon/android/icon-drawable-xxhdpi.png" />
        <splash platform="android" qualifier="ldpi" src="www/res/screen/android/splashscreen-drawable-ldpi.png" />
        <splash platform="android" qualifier="mdpi" src="www/res/screen/android/splashscreen-drawable-mdpi.png" />
        <splash platform="android" qualifier="hdpi" src="www/res/screen/android/splashscreen-drawable-hdpi.png" />
        <splash platform="android" qualifier="xhdpi" src="www/res/screen/android/splashscreen-drawable-xhdpi.png" />
        <splash platform="android" qualifier="xxhdpi" src="www/res/screen/android/splashscreen-drawable-xxhdpi.png" />
        <splash platform="android" qualifier="xxxhdpi" src="www/res/screen/android/splashscreen-drawable-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <resource-file src="GoogleService-Info.plist" />
        <icon height="40" src="www/res/icon/ios/icon-40.png" width="40" />
        <icon height="80" src="www/res/icon/ios/icon-40@2x.png" width="80" />
        <icon height="50" src="www/res/icon/ios/icon-50.png" width="50" />
        <icon height="100" src="www/res/icon/ios/icon-50@2x.png" width="100" />
        <icon height="60" src="www/res/icon/ios/icon-60.png" width="60" />
        <icon height="120" src="www/res/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" src="www/res/icon/ios/icon-60@3x.png" width="180" />
        <icon height="72" src="www/res/icon/ios/icon-72.png" width="72" />
        <icon height="144" src="www/res/icon/ios/icon-72@2x.png" width="144" />
        <icon height="76" src="www/res/icon/ios/icon-76.png" width="76" />
        <icon height="152" src="www/res/icon/ios/icon-76@2x.png" width="152" />
        <icon height="29" src="www/res/icon/ios/icon-small.png" width="29" />
        <icon height="58" src="www/res/icon/ios/icon-small@2x.png" width="58" />
        <icon height="87" src="www/res/icon/ios/icon-small@3x.png" width="87" />
        <icon height="57" src="www/res/icon/ios/icon.png" width="57" />
        <icon height="114" src="www/res/icon/ios/icon@2x.png" width="114" />
        <splash height="1136" platform="ios" src="www/res/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" platform="ios" src="www/res/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" platform="ios" src="www/res/screen/ios/Default-736h.png" width="1242" />
        <splash height="1242" platform="ios" src="www/res/screen/ios/Default-Landscape-736h.png" width="2208" />
        <splash height="1536" platform="ios" src="www/res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="768" platform="ios" src="www/res/screen/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="2048" platform="ios" src="www/res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1024" platform="ios" src="www/res/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="1960" platform="ios" src="www/res/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="480" platform="ios" src="www/res/screen/ios/Default~iphone.png" width="320" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="8000" />
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="git+https://github.com/shazron/cordova-ios.git#CB-13112" />
    <plugin name="cordova-plugin-camera" spec="~2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-cszbar" spec="https://github.com/tjwoon/csZBar.git" />
    <plugin name="cordova-plugin-device" spec="~1.1.5" />
    <plugin name="cordova-plugin-device-motion" spec="^1.2.5" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
    <plugin name="cordova-plugin-media-capture" spec="~1.4.2" />
    <plugin name="cordova-plugin-nativestorage" spec="~2.2.2" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-screen-orientation" spec="^2.0.1" />
    <plugin name="cordova-plugin-secure-key-store" spec="^1.5.4" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-x-toast" spec="~2.6.0" />
    <plugin name="phonegap-plugin-push" spec="^2.0.0" />
</widget>
